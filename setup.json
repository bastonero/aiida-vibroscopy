{
    "name": "aiida-quantumespresso-finite-differences",
    "author": "Lorenzo Bastonero",
    "author_email": "bastonero.lorenzo@gmail.com",
    "url": "https://github.com/bastonero/aiida-quantumespresso-ir-raman",
    "description": "AiiDA plugin to compute IR and Raman spectra using finite differences and fields via Quantum ESPRESSO.",
    "license": "MIT",
    "classifiers": [
        "Programming Language :: Python",
        "Intended Audience :: Science/Research",
        "License :: OSI Approved :: MIT License",
        "Natural Language :: English",
        "Framework :: AiiDA"
    ],
    "version": "0.3.1",
    "entry_points": {
        "aiida.workflows": [
            "quantumespresso.fd.finite_electric_fields = aiida_quantumespresso_finite_differences.workflows.finite_electric_fields:FiniteElectricFieldsWorkChain",
            "quantumespresso.fd.susceptibility_derivatives = aiida_quantumespresso_finite_differences.workflows.susceptibility_derivatives:SusceptibilityDerivativesWorkChain",
            "quantumespresso.fd.first_order_derivatives = aiida_quantumespresso_finite_differences.workflows.computations.first_order_derivatives:FirstOrderDerivativesWorkChain",
            "quantumespresso.fd.second_order_derivatives = aiida_quantumespresso_finite_differences.workflows.computations.second_order_derivatives:SecondOrderDerivativesWorkChain"
        ]
    },
    "include_package_data": true,
    "setup_requires": ["reentry"],
    "reentry_register": true,
    "install_requires": [
        "aiida-core>=1.4.0",
        "aiida-quantumespresso>=3.4.0"
    ],
    "extras_require": {
        "testing": [
            "pgtest~=1.3.1",
            "wheel~=0.31",
            "coverage",
            "pytest~=6.0",
            "pytest-cov"
        ],
        "pre-commit": [
            "pre-commit~=2.2",
            "pylint>=2.5.0,<2.9"
        ]
    }
}
