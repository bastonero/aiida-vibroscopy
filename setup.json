{
    "name": "aiida-quantumespresso-vibroscopy",
    "author": "Lorenzo Bastonero",
    "author_email": "bastonero.lorenzo@gmail.com",
    "url": "https://github.com/bastonero/aiida-quantumespresso-vibroscopy",
    "description": "AiiDA Quantum-ESPRESSO-based plugin to compute vibrational spectra, phonon and dielectric properties using finite differences and fields.",
    "license": "MIT",
    "classifiers": [
        "Programming Language :: Python",
        "Intended Audience :: Science/Research",
        "License :: OSI Approved :: MIT License",
        "Natural Language :: English",
        "Framework :: AiiDA"
    ],
    "version": "0.3.1",
    "entry_points": {
        "aiida.workflows": [
            "quantumespresso.vibroscopy.dielectric.finite_electric_fields = aiida_quantumespresso_vibroscopy.workflows.dielectric.finite_electric_fields:FiniteElectricFieldsWorkChain",
            "quantumespresso.vibroscopy.dielectric.susceptibility_derivatives = aiida_quantumespresso_vibroscopy.workflows.dielectric.susceptibility_derivatives:SusceptibilityDerivativesWorkChain",
            "quantumespresso.vibroscopy.dielectric.first_order_derivatives = aiida_quantumespresso_vibroscopy.workflows.dielectric.first_order_derivatives:FirstOrderDerivativesWorkChain",
            "quantumespresso.vibroscopy.dielectric.second_order_derivatives = aiida_quantumespresso_vibroscopy.workflows.dielectric.second_order_derivatives:SecondOrderDerivativesWorkChain"
        ]
    },
    "include_package_data": true,
    "setup_requires": ["reentry"],
    "reentry_register": true,
    "install_requires": [
        "aiida-core>=1.6.0",
        "aiida-quantumespresso>=3.4.0"
    ],
    "extras_require": {
        "tests": [
            "pgtest~=1.3.1",
            "wheel~=0.31",
            "coverage",
            "pytest~=6.0",
            "pytest-cov"
        ],
        "pre-commit": [
            "pre-commit~=2.2",
            "pylint>=2.5.0,<2.9"
        ]
    }
}
