{
    "name": "aiida-quantumespresso-finite-differences",
    "author": "Lorenzo Bastonero",
    "author_email": "bastonero.lorenzo@gmail.com",
    "description": "AiiDA plugin to compute quantities using finite differences and Quantum ESPRESSO.",
    "license": "MIT",
    "classifiers": [
        "Programming Language :: Python",
        "Intended Audience :: Science/Research",
        "License :: OSI Approved :: MIT License",
        "Natural Language :: English",
        "Framework :: AiiDA"
    ],
    "version": "0.1.0",
    "entry_points": {
        "aiida.workflows": [
            "quantumespresso.fd.finite_electric_fields = aiida_quantumespresso_finite_differences.workflows.finite_electric_fields:FiniteElectricFieldsWorkChain"
        ]
    },
    "include_package_data": true,
    "setup_requires": ["reentry"],
    "reentry_register": true,
    "install_requires": [
        "aiida-core>=1.4.0",
	"aiida-quantumespresso>=3.4.0",
        "sqlalchemy<1.4",
        "psycopg2-binary<2.9"
    ],
    "extras_require": {
        "testing": [
            "pgtest~=1.3.1",
            "wheel~=0.31",
            "coverage",
            "pytest~=6.0",
            "pytest-cov"
        ],
        "pre-commit": [
            "pre-commit~=2.2",
            "pylint>=2.5.0,<2.9"
        ]
    }
}
